<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swrv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class=".ContactViewTasksBinding">
        <import type="androidx.lifecycle.LiveData"/>
        <import type="io.realm.RealmResults"/>
        <import type="org.mpdx.android.features.tasks.model.Task"/>

        <variable
            name="listener"
            type="org.mpdx.android.features.contacts.contactdetail.tasks.ContactTasksViewListener" />
        <variable name="tasks" type="LiveData&lt;RealmResults&lt;Task>>" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact_associated_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="22dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/contact_associated_tasks"
            android:textColor="@color/primary_blue"
            android:textSize="@dimen/contacts_detail_small_textsize"/>

        <io.huannguyen.swipeablerv.view.SWRecyclerView
            android:id="@+id/contact_tasks_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            swrv:border_color="@color/shade_gray"
            swrv:has_border="true"
            swrv:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            swrv:snackbar_background="@color/primary_red"
            swrv:snackbar_message="@string/deleted"
            swrv:snackbar_message_color="@color/white"
            swrv:swipe_background="@color/primary_red"
            swrv:swipe_icon="@drawable/cru_icon_delete_task"
            swrv:swipe_icon_color="@color/white"
            swrv:swipe_icon_height="24dp"
            swrv:swipe_icon_margin="24dp"
            swrv:swipe_icon_width="24dp"
            swrv:swipe_message="@string/delete"
            tools:listitem="@layout/item_task"
            tools:itemCount="3"
            swrv:swipe_message_bold="true"
            swrv:swipe_message_color="@color/white"
            swrv:swipe_message_text_size="16sp"
            swrv:undo_action_text_color="@color/white"/>

        <TextView
            android:id="@+id/contact_task_count_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_blue"
            android:textStyle="bold"
            android:textSize="17sp"
            android:padding="10dp"
            android:text="@{@string/task_count_text(tasks.size)}"
            tools:text="@string/task_count_text"
            android:paddingLeft="30dp"
            android:paddingStart="30dp" />

        <LinearLayout
            android:id="@+id/btn_tasks_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/contact_tasks_margin_top"
            android:layout_marginBottom="@dimen/contacts_detail_bottom_margin"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_view_task_history"
                android:layout_width="match_parent"
                android:layout_height="@dimen/contacts_button_height"
                android:background="@color/primary_blue"
                android:text="@string/contact_view_task_history"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:onClick="@{() -> listener.onTaskHistoryClicked()}"/>

            <Button
                android:id="@+id/btn_new_task"
                android:layout_width="match_parent"
                android:layout_height="@dimen/contacts_button_height"
                android:layout_marginTop="@dimen/contacts_detail_top_margin"
                android:background="@color/primary_blue"
                android:text="@string/contact_new_task"
                android:textAllCaps="false"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</layout>
