<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="contact" type="org.mpdx.android.features.contacts.viewmodel.ContactViewModel" />
        <variable name="presenter" type="org.mpdx.android.features.contacts.ContactsPresenter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom" >

        <org.ccci.gto.android.common.picasso.view.SimplePicassoImageView
            android:id="@+id/cru_icon_avatar"
            android:layout_width="@dimen/contacts_detail_contact_image"
            android:layout_height="@dimen/contacts_detail_contact_image"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:picassoUri="@{contact.avatar}"
            app:placeholder="@drawable/cru_icon_avatar"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/contact_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="bottom|start"
            android:textColor="@color/primary_gray"
            android:textSize="@dimen/contact_detail_large_textsize"
            app:layout_constraintBottom_toTopOf="@id/contact_title"
            app:layout_constraintEnd_toStartOf="@id/contact_star_image"
            app:layout_constraintStart_toEndOf="@id/cru_icon_avatar"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{contact.name}"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/contact_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="start|top|center_vertical"
            android:textColor="@color/primary_gray"
            android:textSize="@dimen/contacts_detail_small_textsize"
            app:layout_constraintBottom_toTopOf="@id/contact_overdue"
            app:layout_constraintEnd_toStartOf="@id/contact_star_image"
            app:layout_constraintStart_toEndOf="@id/cru_icon_avatar"
            app:layout_constraintTop_toBottomOf="@id/contact_name_text"
            android:text="@{contact.relationshipSynopsis}"
            tools:text="Partner - Financial" />

        <TextView
            android:id="@+id/contact_overdue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/filled_circle"
            android:gravity="top|center_vertical"
            android:text="@{contact.donationLateState}"
            android:textColor="@color/primary_gray"
            android:textSize="@dimen/contacts_detail_small_textsize"
            app:drawableTint="@{contact.donationLateState}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/contact_star_image"
            app:layout_constraintStart_toEndOf="@id/cru_icon_avatar"
            app:layout_constraintTop_toBottomOf="@id/contact_title"
            app:visibleIf="@{contact.donationLateAt != null}"
            tools:drawableTint="@color/sixty_plus"
            tools:text="30 Days Late" />

        <ImageView
            android:id="@+id/contact_star_image"
            android:layout_width="@dimen/contacts_detail_contact_image"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:onClick="@{() -> presenter.onContactStarClicked(contact.model)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/star_empty"
            android:src="@{contact.isStarred ? @drawable/star_fill : @drawable/star_empty}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
