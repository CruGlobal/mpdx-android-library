<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="androidx.databinding.ObservableField" />
        <import type="org.mpdx.android.features.appeals.details.PledgeClickedListener" />
        <import type="org.threeten.bp.format.FormatStyle" />

        <variable name="listener" type="ObservableField&lt;PledgeClickedListener>" />
        <variable name="pledge" type="org.mpdx.android.features.appeals.viewmodel.PledgeViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="@color/white"
        android:onClick="@{() -> listener.onPledgeClicked(pledge.model)}"
        android:padding="20dp">

        <TextView
            android:id="@+id/committed_contact_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="@{pledge.contact.name}"
            android:textColor="#585254"
            android:textSize="14sp"
            tools:text="@tools:sample/full_names" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/committed_info_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{pledge.expectedDate}"
                android:textColor="#5A5A5A"
                android:textSize="12sp"
                app:dateStyle="@{FormatStyle.SHORT}"
                tools:text="@tools:sample/date/ddmmyy" />

            <TextView
                android:id="@+id/committed_info_amount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@{pledge.amount}"
                android:textColor="#05699B"
                android:textSize="14sp"
                app:currency="@{pledge.contact.commitmentCurrencyCode}"
                tools:text="$15,00.95 USD" />
        </LinearLayout>

        <ImageView
            android:id="@+id/committed_contact_edit_item"
            android:layout_width="23dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="87dp"
            android:src="@drawable/cru_icon_pencil" />
    </LinearLayout>
</layout>
