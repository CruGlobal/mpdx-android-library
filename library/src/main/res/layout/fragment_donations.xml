<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/donations_toolbar"
                android:layout_width="match_parent"
                app:titleTextColor="@color/dark_blue"
                android:layout_height="?attr/actionBarSize"
                app:title="@string/donations_lowercase" />
        </com.google.android.material.appbar.AppBarLayout>

        <com.nshmura.recyclertablayout.RecyclerTabLayout
            android:id="@+id/tab_layout_donations"
            style="@style/Widget.Mpdx.Donations.List.Tabs"
            android:layout_width="match_parent" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager_donations"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>
</layout>
