<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.text.TextUtils" />
        <import type="androidx.databinding.ObservableField" />
        <import type="org.mpdx.android.features.contacts.contacteditor.ContactEditorCallbacks" />

        <variable name="callbacks" type="ObservableField&lt;ContactEditorCallbacks&gt;" />
        <variable name="expanded" type="boolean" />
        <variable name="contact" type="org.mpdx.android.features.contacts.viewmodel.ContactViewModel" />
        <variable name="person" type="org.mpdx.android.features.contacts.viewmodel.PersonViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/Widget.Mpdx.Form.Section.Fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/contact_editor_section_margin_bottom"
            android:focusable="false"
            android:minHeight="48dp"
            android:onClick="@{() -> callbacks.onUpdatePersonVisibility(contact, person.model, true)}"
            app:visibleIf="@{!expanded}">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/marginStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/contact_editor_start_margin" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/marginEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/contact_editor_end_margin" />

            <TextView
                android:id="@+id/label"
                style="@style/Widget.Mpdx.Contact.Editor.Label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="@{TextUtils.isEmpty(person.fullName) ? @string/contact_editor_label_person_no_name : person.fullName}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/marginEnd"
                app:layout_constraintStart_toStartOf="@id/marginStart"
                app:layout_constraintTop_toTopOf="parent" />

            <org.ccci.gto.android.common.recyclerview.advrecyclerview.view.ExpandableStateImageView
                android:id="@+id/expand"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:tint="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/marginEnd"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_expand" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>
