<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="org.mpdx.android.features.constants.Constants" />

        <variable name="visibility" type="org.mpdx.android.features.contacts.contacteditor.FormVisibilityViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:onClick="@{() -> visibility.toggleCommunication()}">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/marginStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/contact_editor_start_margin" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/marginEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/contact_editor_end_margin" />

        <TextView
            android:id="@+id/label"
            style="@style/Widget.Mpdx.Contact.Editor.Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/contact_address_communications"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/marginEnd"
            app:layout_constraintStart_toStartOf="@id/marginStart"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/expand"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:padding="8dp"
            android:src="@{visibility.communication ? @drawable/ic_expand_less : @drawable/ic_expand_more}"
            app:layout_constraintBottom_toBottomOf="@id/label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/marginEnd"
            app:layout_constraintTop_toTopOf="@id/label"
            app:tint="@color/black"
            tools:src="@drawable/ic_expand_more" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
