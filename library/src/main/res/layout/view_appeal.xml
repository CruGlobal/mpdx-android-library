<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="androidx.databinding.ObservableField"/>
        <import type="org.mpdx.android.features.appeals.AppealSelectedListener" />

        <variable name="listener" type="ObservableField&lt;AppealSelectedListener>" />
        <variable name="appeal" type="org.mpdx.android.features.appeals.model.Appeal" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> listener.onAppealSelected(appeal)}"
        android:padding="@dimen/appeals_padding"
        app:visibleIf="@{appeal != null}">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/appeals_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{appeal.name}"
                android:textColor="@color/primary_blue"
                android:textSize="16sp"
                tools:text="Appeal" />

            <TextView
                android:id="@+id/appeals_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@{@string/appeal_balance(appeal.givenInt, appeal.amountInt)}"
                android:fontFamily="sans-serif-light"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue"
                tools:text="10/50" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/header">

            <ProgressBar
                android:id="@+id/appeals_progress"
                style="@style/Balance_Progress_Triple_Base"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="@{appeal.amountInt}"
                android:progress="@{appeal.receivedInt + appeal.givenInt}"
                android:secondaryProgress="@{appeal.committedInt + appeal.receivedInt + appeal.givenInt}"
                tools:max="50"
                tools:progress="20"
                tools:secondaryProgress="30" />

            <ProgressBar
                android:id="@+id/appeals_progress_given"
                style="@style/Balance_Progress_Tertiary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="@{appeal.amountInt}"
                android:progress="@{appeal.givenInt}"
                tools:max="50"
                tools:progress="10" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
