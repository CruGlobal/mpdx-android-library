<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >
    <data>
        <import type="android.view.View" />
        <variable name="phoneNumber" type="org.mpdx.android.features.contacts.viewmodel.PhoneNumberViewModel" />
        <variable
            name="listener"
            type="org.mpdx.android.features.contacts.contactdetail.info.ContactPersonPhoneNumberAdapter.PhoneCallListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> listener.onPhoneCallSelected(phoneNumber.model)}">

        <TextView
            android:id="@+id/contact_phone_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@{phoneNumber.location}"
            android:textColor="@color/primary_blue"
            visibleIf="@{phoneNumber.location != null}"
            android:textSize="@dimen/contacts_detail_small_textsize"
            app:layout_constraintBottom_toTopOf="@+id/contact_phone_number"
            app:layout_constraintStart_toStartOf="@+id/contact_phone_number"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Mobile" />

        <TextView
            android:id="@+id/contact_phone_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/primary_gray"
            android:textSize="@dimen/contacts_info_text_size"
            android:text="@{phoneNumber.number}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/check_image_view"
            app:layout_constraintTop_toBottomOf="@+id/contact_phone_label"
            app:strikethroughIf="@{phoneNumber.isHistoric}"
            tools:text="(404) 555-5555" />

        <ImageView
            android:id="@+id/check_image_view"
            android:layout_width="15dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:visibility="@{phoneNumber.primary ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/contact_phone_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cru_icon_check" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
