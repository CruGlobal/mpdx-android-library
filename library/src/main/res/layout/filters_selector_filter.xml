<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="androidx.databinding.ObservableField" />
        <import type="org.mpdx.android.features.filter.selector.FilterActions" />

        <variable name="filter" type="org.mpdx.android.features.filter.model.Filter" />
        <variable name="filterActions" type="ObservableField&lt;FilterActions&gt;" />
    </data>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:checked="@{filter.isEnabled}"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:minHeight="48dp"
        android:onCheckedChanged="@{(v, checked) -> filter.isEnabled != checked ? filterActions.toggleFilter(filter, checked) : null}"
        android:paddingEnd="16dp"
        android:paddingStart="12dp"
        android:text="@{filter.label}"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ask in Future" />
</layout>
