<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:swrv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tasks_view_all_toolbar"
            app:title="@string/tasks_view_all"
            style="@style/ToolbarTheme"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/all_tasks_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <io.huannguyen.swipeablerv.view.SWRecyclerView
            android:id="@+id/tasks_view_all_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            swrv:border_color="@color/shade_gray"
            swrv:has_border="true"
            swrv:snackbar_background="@color/primary_red"
            swrv:snackbar_message="@string/deleted"
            swrv:snackbar_message_color="@color/white"
            swrv:swipe_background="@color/primary_red"
            swrv:swipe_icon="@drawable/cru_icon_delete_task"
            swrv:swipe_icon_color="@color/white"
            swrv:swipe_icon_height="24dp"
            swrv:swipe_icon_margin="24dp"
            swrv:swipe_icon_width="24dp"
            swrv:swipe_message="@string/delete"
            swrv:swipe_message_bold="true"
            swrv:swipe_message_color="@color/white"
            swrv:swipe_message_text_size="16sp"
            swrv:undo_action_text_color="@color/white"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <TextView
        android:id="@+id/task_count_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_blue"
        android:textStyle="bold"
        android:textSize="17sp"
        android:padding="10dp"
        tools:text="Total Tasks: 150"
        android:paddingLeft="30dp"
        android:paddingStart="30dp" />
</LinearLayout>
