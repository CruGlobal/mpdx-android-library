<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class=".ContactViewDonationBinding">

        <variable
            name="presenter"
            type="org.mpdx.android.features.contacts.contactdetail.donation.ContactDonationAdapterListener" />
        <variable
            name="dataModel"
            type="org.mpdx.android.features.contacts.contactdetail.ContactDetailActivityViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/contacts_details_margin_left"
        android:layout_marginEnd="@dimen/contacts_details_margin_right"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/subheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="22dp">

            <TextView
                android:id="@+id/contact_gifts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@{dataModel.numGifts}"
                android:textAllCaps="true"
                android:textColor="@color/primary_blue"
                android:textSize="@dimen/contacts_detail_small_textsize"/>

            <TextView
                android:id="@+id/contact_every_month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@{dataModel.donationLine}"
                android:textAllCaps="false"
                android:textColor="@color/primary_blue"
                android:visibility="@{dataModel.pledgeVisibility}"
                android:textSize="12sp"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contact_donation_recycler"
            android:layout_width="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_view_task_history"
            android:layout_width="match_parent"
            android:layout_height="@dimen/contacts_button_height"
            android:layout_marginBottom="@dimen/contacts_detail_bottom_margin"
            android:background="@color/primary_blue"
            android:text="@string/contact_view_more_donations"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="@{dataModel.viewMoreDonationsVisibility}"
            android:textSize="17sp"
            android:textStyle="bold"
            android:onClick="@{() -> presenter.onViewMoreDonationsClicked()}"/>

    </LinearLayout>

</layout>
